<% if user_signed_in? %>
  <% if current_user.liked_by?(animal.id) %>
    <%= link_to destroy_like_path(animal.id), class: "like-link", method: :DELETE, remote: true do %>
      <i class="fas fa-star unlike-btn"></i>
    <% end %>
    <%= animal.likes.count %>
  <% else %>
    <%= link_to create_like_path(animal.id), class: "like-link", method: :POST, remote: true  do %>
      <i class="far fa-star like-btn"></i>
    <% end %>
    <%= animal.likes.count %>
  <% end %>
<% end %>