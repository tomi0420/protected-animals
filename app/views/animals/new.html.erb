<h2>新規投稿</h2>

<%= form_with model: @new_animal, url: animals_path, local: true do |f| %>
  <%# <%= render "devise/shared/error_messages", resource: @new_animal %> 


  <div class='form-text-wrap'>
    <div class="info">
      <span class="indispensable">必須</span>画像
    </div>
    <div class="field">
      <%= f.file_field :image %>
    </div>
  </div>


  <div class='form-text-wrap'>
    <div class="info">
      <span class="indispensable">必須</span>名前
    </div>
    <div class="field">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class='form-text-wrap'>
    <div class="info">
      <span class="indispensable">必須</span>カテゴリー
    </div>
    <div class="field">
      <%= f.collection_radio_buttons(:animal_category_id, AnimalCategory.all, :id, :name, {}, {class:"select-box", id:"animal-category"}) %>
    </div>
  </div>

  <div class='form-text-wrap'>
    <div class="info">
      <span class="indispensable">必須</span>
      <span class="indispensable">タグ</span>犬種・猫種
    </div>
    <div class="field">
      <%= f.text_field :kind_name %>
    </div>
  </div>

  <div class='form-text-wrap'>
    <div class="info">
      <span class="indispensable">必須</span>大きさ
    </div>
    <div class="field">
      <%= f.collection_radio_buttons(:size_id, Size.all, :id, :name, {}, {class:"select-box", id:"animal-size"}) %>
    </div>
  </div>

  <div class='form-text-wrap'>
    <div class="info">
      <span class="indispensable">必須</span>性別
    </div>
    <div class="field">
      <%= f.collection_radio_buttons(:sex_id, Sex.all, :id, :name, {}, {class:"select-box", id:"animal-sex"}) %>
    </div>
  </div>

  <div class='form-text-wrap'>
    <div class="info">
      <span class="indispensable">必須</span>年齢
    </div>
    <div class="field">
      <%= f.text_field :age %>
    </div>
  </div>

  <div class='form-text-wrap'>
    <div class="info">
      <span class="indispensable">必須</span>誕生日
    </div>
    <div class="field">
      <%= f.date_select :birth_date %>
    </div>
  </div>

  <div class='form-text-wrap'>
    <div class="info">
      <span class="indispensable">必須</span>
    </div>
    <div class="field">
      <%= f.text_field :info %>
    </div>
  </div>

  <div class='form-text-wrap'>
    <div class="info">
      <span class="indispensable">必須</span>性格
    </div>
      <div class="field">
      <%= f.text_field :personality %>
    </div>
  </div>

  <div class='form-text-wrap'>
    <div class="info">
      <span class="indispensable">必須</span>都道府県
    </div>
    <div class="field">
      <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"animal-prefecture"}) %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "投稿する" %>
  </div>

<% end %>

<%= link_to "TOPページへ戻る" , root_path %>
