<div class="chat">
  <% if user_signed_in? %>
    <h2 style="text-align:center"><%="#{@room.conservation_group.nickname}さんとのチャット"%></h2>
  <% elsif conservation_group_signed_in? %>
    <h2 style="text-align:center"><%="#{@room.user.nickname}さんとのチャット"%></h2>
  <% end %>

  <div id="chats">
    <% @chats.each do |chat|%>
      <% if user_signed_in? %>
        <% if chat.user_id == current_user.id %>
          <div class="mycomment">
            <p><%= chat.content %></p>
          </div>
        <% else %>
          <div class="fukidasi">
            <div class="faceicon">
              <i class="fas fa-user"></i>
            </div>
            <div class="chatting">
              <div class="says">
                <p><%= chat.content %></p>
              </div>
            </div>
          </div>
        <%end%>
      <%end %>
      <% if conservation_group_signed_in? %>
        <% if chat.conservation_group_id == current_conservation_group.id %>
          <div class="mycomment">
            <p><%= chat.content %></p>
          </div>
        <%else %>
          <div class="fukidasi">
            <div class="faceicon">
              <i class="fas fa-user"></i>
            </div>
            <div class="chatting">
              <div class="says">
                <p><%= chat.content %></p>
              </div>
            </div>
          </div>
        <%end%>
      <%end %>
    <%end%>
  </div>

  <%= form_with model: [@room, @chat], class: 'chat-form' do |f| %>
    <div class="form-input">
      <%= f.text_field   :content, class: 'form-message' %>
      <label class="form-image">
        <i class="far fa-image fa-3x"></i>
        <%= f.file_field :image, class: 'hidden' %>
      </label>
    </div>
    <%= f.submit '送信', class: 'chat-form-submit' %>
  <% end %>

</div>