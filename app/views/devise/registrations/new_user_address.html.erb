<h2>住所情報登録</h2>

<%= form_for @user_address do |f| %>
  <%= render "devise/shared/error_messages", resource: @user_address %>

    <div class='form-text-wrap'>
      <label class="form-text">郵便番号</label>
      <span class="indispensable">必須</span>
    </div>
    <div class="field">
      <%= f.text_field :postal_code, placeholder:"例）123-4567", maxlength:"8" %>
    </div>

    <div class='form-text-wrap'>
      <label class="form-text">都道府県</label>
      <span class="indispensable">必須</span>
    </div>
    <div class="field">
      <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"prefecture"}) %>
    </div>

    <div class='form-text-wrap'>
      <label class="form-text">市区町村</label>
      <span class="indispensable">必須</span>
    </div>
      <div class="field">
      <%= f.text_field :city, placeholder:"例）横浜市緑区" %>
    </div>

    <div class='form-text-wrap'>
      <label class="form-text">番地</label>
      <span class="indispensable">必須</span>
    </div>
      <div class="field">
      <%= f.text_field :address, placeholder:"例）青山1-1-1" %>
    </div>

    <div class='form-text-wrap'>
      <label class="form-text">建物名</label>
      <span class="indispensable">任意</span>
    </div>
      <div class="field">
      <%= f.text_field :building, placeholder:"例）柳ビル103" %>
    </div>

      <div class='form-text-wrap'>
      <label class="form-text">電話番号</label>
      <span class="indispensable">必須</span>
    </div>
      <div class="field">
      <%= f.text_field :phone_number, placeholder:"例）09012345678",maxlength:"11" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
<% end %>

<%= render "devise/shared/links" %>
