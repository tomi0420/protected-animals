<div class="session-form">
  <div class="form1">
    <%= form_for @user_address do |f| %>
      <%= render "devise/shared/error_messages", resource: @user_address %>

        <div class='form-text-wrap'>
          <div class="info">
            <span class="indispensable">必須</span>郵便番号
          </div>
          <div class="field">
            <%= f.text_field :postal_code, placeholder:"例）123-4567", maxlength:"8" %>
          </div>
        </div>

        <div class='form-text-wrap'>
          <div class="info">
            <span class="indispensable">必須</span>都道府県
          </div>
          <div class="field">
            <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"prefecture"}) %>
          </div>
        </div>

        <div class='form-text-wrap'>
          <div class="info">
            <span class="indispensable">必須</span>市区町村
          </div>
          <div class="field">
            <%= f.text_field :city, placeholder:"例）横浜市緑区" %>
          </div>
        </div>

        <div class='form-text-wrap'>
          <div class="info">
            <span class="indispensable">必須</span>番地
          </div>
          <div class="field">
            <%= f.text_field :address, placeholder:"例）青山1-1-1" %>
          </div>
        </div>

        <div class='form-text-wrap'>
          <div class="info">
            <span class="indispensable">任意</span>建物名
          </div>
          <div class="field">
            <%= f.text_field :building, placeholder:"例）柳ビル103" %>
          </div>
        </div>

        <div class='form-text-wrap'>
          <div class="info">
            <span class="indispensable">必須</span>電話番号
          </div>
          <div class="field">
            <%= f.text_field :phone_number, placeholder:"例）09012345678",maxlength:"11" %>
          </div>
        </div>

        <div class="actions">
          <div class="next">
            <%= f.submit "登録" %>
          </div>
        </div>
    <% end %>
  </div>
</div>
