<div class="contents row">
  <div class="container">
    <h2>Sign up</h2>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= devise_error_messages! %> 

      <div class='form-text-wrap'>
        <label class="form-text">ニックネーム</label>
        <span class="indispensable">必須</span>
      </div>
      <div class="field">
        <%= f.text_field :nickname, autofocus: true %>
      </div>

      <div class='form-text-wrap'>
        <label class="form-text">お名前(全角)</label>
        <span class="indispensable">必須</span>
      </div>
      <div class='field'>
          <%= f.text_field :last_name, placeholder:"例) 佐藤" %>
          <%= f.text_field :first_name, placeholder:"例) 太郎" %>
      </div>

      <div class='form-text-wrap'>
        <label class="form-text">お名前カナ(全角)</label>
        <span class="indispensable">必須</span>
      </div>
      <div class='field'>
          <%= f.text_field :last_name_kana, placeholder:"例) サトウ" %>
          <%= f.text_field :first_name_kana, placeholder:"例) タロウ" %>
      </div>

      <div class='form-text-wrap'>
        <label class="form-text">Eメール</label>
        <span class="indispensable">必須</span>
      </div>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class='form-text-wrap'>
        <label class="form-text">パスワード（確認用）</label>
        <span class="indispensable">必須</span>
      </div>
      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Next" %>
      </div>
     <% end %>
    </div>
  </div>
</div>