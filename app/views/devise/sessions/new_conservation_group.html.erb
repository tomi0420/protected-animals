<%= form_with model: @user_conservation, url: conservation_group_session_path, class: 'registration-main', local: true do |f| %>
  <div class='form-wrap'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        ログイン
      </h1>
    </div>
    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <div class="info">
          <span class="indispensable">必須</span>メールアドレス
        </div>
        <div class="field">
          <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <div class="info">
          <span class="indispensable">必須</span>パスワード
        </div>
        <div class="field">
          <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
        </div>
      </div>
    </div>

    <div class='login-btn'>
      <%= f.submit "ログイン" ,class:"login-red-btn" %>
    </div>

    <div class="registration_link">
      <%= "登録がお済みでない方は" %>
      <%= link_to "こちら", new_user_registration_path, class: :registrationq %>
      <%= "から" %>
    </div >

  </div>

<% end %>
